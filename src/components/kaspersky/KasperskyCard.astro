---
import { CircleCheck } from "lucide-react";
import ContactDialog from "../contactModal/ContactDialog.astro";
import clsx from "clsx";
import Text from "../ui/Text.astro";
interface Props {
  title: string;
  desc: string;
  list: string[];
  cardClassName?: string;
  buttonClassName?: string;
  listClassName?: string;
}

const { title, desc, list, cardClassName, buttonClassName, listClassName } =
  Astro.props as Props;
---

<div
  class={clsx(
    "p-5 rounded-xl border flex flex-col justify-between",
    cardClassName
  )}
>
  <div>
    <Text text={title} variant="h4" class="h-10 mb-5"/>
    <Text text={desc} variant="h6"/>
  </div>

  <div class="mt-5">
    <ul class={clsx("", listClassName)}>
      {
        list.map((item) => (
          <li class="text-small mt-2 list-none flex gap-2 ">
            <div class="w-5 h-5">
              <CircleCheck  className="h-5 w-5 text-secondary" />
            </div>
            <Text text={item} variant="h6"/>
          </li>
        ))
      }
    </ul>
    <ContactDialog
      className={clsx("w-full rounded-md mt-5", buttonClassName)}
    />
  </div>
</div>
