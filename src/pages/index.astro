import main from "@/assets/main.png";
import Sponsors from "@/widgets/homepage/Sponsors.astro";
import { getTranslations } from "@/utils/i18n";

const seoData = {
  title: "SmartCloud – Облачные технологии IaaS, VDS, BaaS, SaaS в Узбекистане",
  description:
    "Облачные сервисы в Узбекистане: IaaS, VDS, BaaS, S3-хранилище, антивирус Kaspersky, DDoS-защита, SOC. Надежные решения для бизнеса от SmartCloud.",
