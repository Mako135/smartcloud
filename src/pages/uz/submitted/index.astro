---
import Layout from "@/layouts/Layout.astro";
import { getTranslations } from "@/utils/i18n";

const seoData = {
  title: "Спасибо за вашу заявку – SmartCloud",
  description:
    "Ваша заявка успешно отправлена. Мы свяжемся с вами в ближайшее время.",
  url: "https://smartcloud.uz/submutted/",
  author: "SmartCloud",
};
const t = getTranslations("uz", "Submitted");
---

<Layout {...seoData}>
  <div class="flex flex-col items-center justify-center min-h-screen p-4">
    <h1 class="text-3xl font-bold mb-4">{t.title}</h1>
    <p class="text-lg text-center mb-8">{t.description}</p>
    <a
      href="https://portal.smartcloud.uz/index.php?/products/"
      target="_blank"
      class="h-9 flex items-center justify-center px-6 bg-secondary text-white dark:bg-white dark:text-black rounded-3xl font-medium text-md"
      >{t.buttonText}</a
    >
  </div>
</Layout>
