---
import AboutSection from "@/components/shared/AboutSection.astro";
import AdvantageCard from "@/components/shared/AdvantageCard.astro";
import AdvantageCardWithIcon from "@/components/shared/AdvantageCardWithIcon.astro";
import Layout from "@/layouts/Layout.astro";
import { socAdvantages, socAdvantages2 } from "@/lib/dataUZ/socData";
import Hero from "@/widgets/Hero.astro";
import Text from "@/components/ui/Text.astro";
import socImg from "@/assets/waf.svg";
import SocAccordion from "@/widgets/security/soc/SocAccordion.astro";
import { getTranslations } from "@/utils/i18n";
const seoData = {
  title: "Security Operations Center (SOC) – Мониторинг и защита",
  description:
    "SOC – kiberxavfsizlik monitoringi va 24/7 himoya.",
  keywords:
    "SOC, xavfsizlik markazi, hujum monitoringi, ma’lumotlarni himoya qilish, SmartCloud",
  url: "https://smartcloud.uz/uz/cloud-services/soc/",
  image: "https://smartcloud.uz/assets/waf.svg",
  author: "SmartCloud",
};
const t = getTranslations("uz", "SOC")
---

<Layout {...seoData}>
  <Hero imgSrc={socImg}>
    <Text text={t.title} type="highlight"/>
    <Text text={t.description} variant="h4" class="mt-4" />
  </Hero>

  <AboutSection title={t.AboutSection.title}>
    <Text text={t.AboutSection.description} variant="h3" type="highlight"/>
  </AboutSection>

  <AdvantageCard title={t.AdvantageCard.title} data={socAdvantages} />
  <AdvantageCardWithIcon
    title={t.AdvantageCardWithIcon.title}
    data={socAdvantages2}
  />

  <SocAccordion/>
</Layout>
