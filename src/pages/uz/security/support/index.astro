---
import AboutSection from "@/components/shared/AboutSection.astro";
import AdvantageCard from "@/components/shared/AdvantageCard.astro";
import AdvantageCardWithIcon from "@/components/shared/AdvantageCardWithIcon.astro";
import Layout from "@/layouts/Layout.astro";
import {
  securitySupportData,
  securitySupportData2,
} from "@/lib/dataUZ/securitySupportData";
import Hero from "@/widgets/Hero.astro";
import Text from "@/components/ui/Text.astro";
import securitySupportImg from "@/assets/support.png";
import SupportAccordion from "@/widgets/security/support/SupportAccordion.astro";
import { getTranslations } from "@/utils/i18n";

const seoData = {
  title: "Техническая поддержка SmartCloud – Поддержка 24/7",
  description:
    "SmartCloud texnik qo‘llab-quvvatlashi – 24/7 yordam, monitoring va maslahat.",
  keywords: "texnik yordam, IT-yordam, 24/7 qo‘llab-quvvatlash, SmartCloud",
  url: "https://smartcloud.uz/uz/support/",
  image: "https://smartcloud.uz/assets/support.svg",
  author: "SmartCloud",
};
const t = getTranslations("uz","Support")
---

<Layout {...seoData}>
  <Hero imgSrc={securitySupportImg}>
    <Text text={t.title} type="highlight"/>
    <Text text={t.description} variant="h4" class="mt-6 hidden sm:block" />
  </Hero>

  <AboutSection title={t.AboutSection.title}>
    <Text text={t.AboutSection.description} variant="h3"/>
  </AboutSection>

  <AdvantageCard
    title={t.AdvantageCard.title}
    data={securitySupportData}
  />
  <AdvantageCardWithIcon
    cardClassName="xl:grid-cols-3"
    title={t.AdvantageCardWithIcon.title}
    data={securitySupportData2}
  />

  <SupportAccordion/>
</Layout>
