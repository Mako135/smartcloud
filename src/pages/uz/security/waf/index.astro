---
import AboutSection from "@/components/shared/AboutSection.astro";
import AdvantageCard from "@/components/shared/AdvantageCard.astro";
import AdvantageCardWithIcon from "@/components/shared/AdvantageCardWithIcon.astro";
import Layout from "@/layouts/Layout.astro";
import {
  wafAdvantages,
  wafAdvantages2,
  wafUseCases,
} from "@/lib/dataUZ/wafData";
import Container from "@/widgets/Container.astro";
import Hero from "@/widgets/Hero.astro";
import wafImg from "@/assets/waf.svg";
import IaasUseCaseCard from "@/components/cloud-services/iaas/IaasUseCaseCard.astro";
import WafAccodtion from "@/widgets/security/waf/WafAccodtion.astro";
import { getTranslations } from "@/utils/i18n";
import Text from "@/components/ui/Text.astro";

const seoData = {
  title: "WAF (Web Application Firewall) – Защита веб-приложений",
  description:
    "Bulutli WAF – SQL-in'ektsiyalar va zararli trafikdan himoya. Sayt va ilovalar xavfsizligi uchun samarali yechim.",
  keywords:
    "WAF, Web Application Firewall, veb xavfsizligi, kiberxavfsizlik, SmartCloud",
  url: "https://smartcloud.uz/uz/cloud-services/waf/",
  image: "https://smartcloud.uz/assets/waf.svg",
  author: "SmartCloud",
};
const t = getTranslations("uz", "WAF");
---

<Layout {...seoData}>
  <Container>
    <Hero imgSrc={wafImg}>
      <h1 class="text-dynamic font-medium leading-none">
        <span class="text-secondary">WAF</span> - Veb-ilovalar uchun <br
        />ishonchli himoya
      </h1>
      <p class="text-medium mt-4">
        Bizning Web Application Firewall (WAF) real vaqt rejimida veb-trafikni
        tahlil qiladi, zararli faoliyatni aniqlaydi va bloklaydi,
        veb-ilovalaringizni ishonchli himoya qiladi.
      </p>
    </Hero>

    <AboutSection title="Bizning noyob taklifimiz">
      Veb-ilovangizni keng ko‘lamli tahdidlardan har tomonlama himoya qiling
      bizning WAF yordamida. Tizimimiz ilova darajasida ishlaydi, barcha
      trafikni tahlil qiladi va xavfli so‘rovlarni serveringizga yetib
      borishidan oldin bloklaydi. Moslashuvchan siyosat sozlamalari himoyani
      sizning o‘ziga xos ehtiyojlaringizga moslashtirish imkonini beradi.
    </AboutSection>

    <AdvantageCard
      title="WAF bilan Veb-ilovalaringizning Ishonchli Himoyasi"
      dataArray={wafAdvantages}
      cardClassName="mt-0"
    />

    <section class="my-dynamic">
      <h1 class="text-extra-large font-medium text-center mb-dynamic">
        WAF qo‘llanilish sohalari
      </h1>

      <div class="grid lg:grid-cols-3 gap-10">
        {
          wafUseCases.map((item) => (
            <IaasUseCaseCard
              title={item.title}
              description={item.description}
            />
          ))
        }
      </div>
    </section>
  </Container>

  <AdvantageCardWithIcon
    title="Siz ushbu xizmat bilan nima olasiz?"
    data={wafAdvantages2}
  />

  <Container>
    <WafAccodtion />
  </Container>
</Layout>
