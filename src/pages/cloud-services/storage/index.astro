---
import AboutSection from "@/components/shared/AboutSection.astro";
import AdvantageCard from "@/components/shared/AdvantageCard.astro";
import Layout from "@/layouts/Layout.astro";
import Hero from "@/widgets/Hero.astro";

import storageImg from "@/assets/storage.webp";
import { storageAdvantages } from "@/lib/data/storageData";
import { getTranslations } from "@/utils/i18n";
import Text from "@/components/ui/Text.astro";

const seoData = {
  title: "Облачное хранилище в Узбекистане – S3 Storage от SmartCloud",
  description:
    "Масштабируемое облачное хранилище для безопасного хранения и обработки данных. Высокая скорость, надежность и доступность.",
  descriptionUz:
    "Bulutli saqlash xizmati – yuqori tezlik va ishonchli ma'lumotlarni saqlash.",
  keywords:
    "облачное хранилище, S3 storage, резервное копирование, SmartCloud, хранение данных, облако",
  keywordsUz:
    "bulutli saqlash, S3 storage, backup, SmartCloud, ma’lumotlar xotirasi",
  url: "https://smartcloud.uz/cloud-services/s3-storage/",
  image: "https://smartcloud.uz/assets/s3-storage.svg",
  author: "SmartCloud",
};

const t = getTranslations("ru", "Storage");
---

<Layout {...seoData}>
  <Hero imgSrc={storageImg}>
    <Text text={t.title} type="highlight"/>
    <Text text={t.description} variant="h4" class="mt-6"/>
  </Hero>
 
  <AboutSection title={t.AboutSection.title}>
    <Text text={t.AboutSection.description} variant="h3" type="highlight"/>
  </AboutSection>
  <AdvantageCard
    title={t.AdvantageCard.title}
    data={storageAdvantages}
    cardClassName="lg:grid-cols-3"
  />
</Layout>
