---
import { headerData } from "@/lib/data/headerData";
import Container from "./Container.astro";
import { Send, Instagram } from "lucide-react";
import { getTranslations } from "@/utils/i18n";
import Text from "@/components/ui/Text.astro";

const locale = Astro.url.pathname.startsWith("/uz") ? "uz" : "ru";
const t = getTranslations(locale, "Footer");
---

<footer class="mt-20 py-10">
  <Container>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
      <div class="flex flex-col gap-3">
        <Text text={t.contacts.title} variant="h6" class="text-bold uppercase" />
        <ul class="flex flex-col gap-2">
          <li class="ml-1">
            <Text text={t.contacts.number1} variant="h5" class="text-bold uppercase" />
          </li>
          <li class="ml-1">
            <Text text={t.contacts.number2} variant="h5" class="text-bold uppercase" />
          </li>
          <li class="ml-1">
            <Text text={t.contacts.email} variant="h5" class="text-bold" />
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-3">
        <Text text={t.addresses.label} variant="h6" class="text-bold uppercase" />
        <ul class="flex flex-col gap-2">
          <li class="ml-1">
            <Text text={t.addresses.address1} variant="h5" class="text-bold" />
          </li>
          <li class="ml-1">
            <Text text={t.addresses.address2} variant="h5" class="text-bold" />
          </li>
        </ul>
      </div>
      {
        headerData.map((item) => (
          <div class="flex flex-col gap-3">
            <Text text={locale === "uz" ? item.labelUZ : item.label} variant="h6" class="text-bold uppercase" />
            <ul class="flex flex-col gap-2">
              {(locale === "uz" ? item.linksUZ : item.links).map((link) => (
                <li class="ml-1">
                  <a href={link.href}>
                    <Text text={link.label} variant="h5" class="text-bold" />
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </Container>
  <div class="border-[1px] border-gray-300/50 mb-10 mt-20"></div>
  <Container>
    <div class="flex justify-between items-center">
      <Text text={t.SmartCloud} variant="h6" class="text-gray-400" />
      <ul class="flex gap-2">
        <li>
          <a
            href="https://t.me/muradibragimov"
            aria-label="Отправить сообщение"
            title="Отправить сообщение"
            target="_blank"
          >
            <Send size={20} />
          </a>
        </li>
        <li>
          <a
            href="https://www.instagram.com/smartcloud.uz?igsh=MTRrY2UwbXFjdmpodQ=="
            aria-label="Наш Instagram"
            title="Следуйте за нами в Instagram"
            target="_blank"
          >
            <Instagram size={20} />
          </a>
        </li>
      </ul>
    </div>
  </Container>
</footer>
